<odoo>
    <record id="view_gcond_f24_export_wizard_form" model="ir.ui.view">
        <field name="name">gcond.f24.export.wizard.form</field>
        <field name="model">gcond.f24.export.wizard</field>
        <field name="arch" type="xml">
            <form string="Esportazione F24">
                <group>
                    <group>
                        <field name="condominio_id"/>
                        <field name="date_payment"/>
                    </group>
                    <group>
                        <field name="journal_id" domain="[('condominio_id', '=', condominio_id), ('type', '=', 'bank')]"/>
                        <field name="file_name" invisible="1"/>
                        <field name="file_data" filename="file_name" readonly="1"/>
                    </group>
                </group>
                
                <notebook>
                    <page string="Ritenute da Versare">
                        <label for="withholding_move_ids" string="Seleziona le ritenute da includere nel file:"/>
                        <field name="withholding_move_ids" widget="many2many">
                            <list>
                                <field name="date"/>
                                <field name="partner_id"/>
                                <field name="withholding_tax_id"/>
                                <field name="amount" sum="Totale"/>
                                <field name="state" invisible="1"/>
                            </list>
                        </field>
                    </page>
                </notebook>

                <footer>
                    <button name="action_generate_file" string="Genera File" type="object" class="btn-primary"/>
                    <button name="action_print_pdf" string="Stampa F24 (PDF)" type="object" class="btn-secondary"/>
                    <button name="action_mark_paid" string="Segna come Versate" type="object" class="btn-warning"
                            confirm="Sei sicuro di voler segnare queste ritenute come PAGATE? L'operazione Ã¨ irreversibile."
                            invisible="not file_data"/>
                    <button string="Chiudi" class="btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

    <record id="action_gcond_f24_export_wizard" model="ir.actions.act_window">
        <field name="name">Crea File F24</field>
        <field name="res_model">gcond.f24.export.wizard</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>

    <menuitem id="menu_gcond_f24_export"
              name="Export F24"
              parent="gcond.menu_3"
              action="action_gcond_f24_export_wizard"
              sequence="30"/>
</odoo>
