<odoo>
    <data>
        <record id="action_report_f24" model="ir.actions.report">
            <field name="name">Modello F24</field>
            <field name="model">gcond.f24.export.wizard</field>
            <field name="report_type">qweb-pdf</field>
            <field name="report_name">gcond.report_f24_template</field>
            <field name="report_file">gcond.report_f24_template</field>
            <field name="print_report_name">'F24 - %s' % (object.condominio_id.name)</field>
            <field name="binding_model_id" ref="model_gcond_f24_export_wizard"/>
            <field name="binding_type">report</field>
        </record>

        <template id="report_f24_template">
            <t t-call="web.html_container">
                <t t-foreach="docs" t-as="o">
                    <t t-call="web.external_layout">
                        <div class="page">
                            <h2 class="text-center">MODELLO DI PAGAMENTO UNIFICATO (F24)</h2>
                            <br/>
                            
                            <!-- SEZIONE DATI ANAGRAFICI -->
                            <div class="row" style="border: 1px solid black; padding: 10px; margin-bottom: 10px;">
                                <div class="col-12">
                                    <strong>CONTRIBUENTE</strong>
                                </div>
                                <div class="col-6">
                                    <span t-field="o.condominio_id.name"/> <br/>
                                    CF: <span t-field="o.condominio_id.fiscal_code"/>
                                </div>
                                <div class="col-6">
                                    Data Scadenza: <span t-field="o.date_payment"/>
                                </div>
                            </div>

                            <!-- SEZIONE ERARIO -->
                            <div class="row" style="border: 1px solid black; margin-bottom: 20px;">
                                <div class="col-12" style="background-color: #eee; border-bottom: 1px solid black; padding: 5px;">
                                    <strong>SEZIONE ERARIO</strong>
                                </div>
                                <div class="col-12 p-0">
                                    <table class="table table-bordered table-sm m-0">
                                        <thead>
                                            <tr>
                                                <th style="width: 20%">Codice Tributo</th>
                                                <th style="width: 10%">Mese Riff.</th>
                                                <th style="width: 10%">Anno Riff.</th>
                                                <th style="width: 30%">Importi a debito versati</th>
                                                <th style="width: 30%">Importi a credito compensati</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            <!-- Logic to group lines -->
                                            <t t-set="grouped_lines" t-value="{}"/>
                                            <t t-foreach="o.withholding_move_ids" t-as="move">
                                                <t t-set="key" t-value="(move.withholding_tax_id.code, move.date.strftime('%m'), move.date.strftime('%Y'))"/>
                                                <t t-if="key not in grouped_lines">
                                                    <t t-set="grouped_lines" t-value="grouped_lines.update({key: 0})"/>
                                                </t>
                                                <t t-set="formatted_key" t-value="'%s|%s|%s' % key"/>
                                                 <!-- Note: QWeb doesn't support easy dict updates in loop var scope cleanly. 
                                                      Better to call a python helper on the object. 
                                                      But for now, let's list them flat for simplicity or use a simple logic.
                                                 -->
                                            </t>
                                            
                                            <!-- Simplified approach: List moves directly if few, but better to group. 
                                                 Since we can't easily group in QWeb, let's call a method on the wizard model. 
                                                 But wizard is transient.
                                                 Let's just list them sorted.
                                            -->
                                            <tr t-foreach="o.withholding_move_ids.sorted(key=lambda m: (m.withholding_tax_id.code, m.date))" t-as="line">
                                                <td><span t-field="line.withholding_tax_id.code"/></td>
                                                <td><span t-esc="line.date.strftime('%m')"/></td>
                                                <td><span t-esc="line.date.strftime('%Y')"/></td>
                                                <td class="text-right">
                                                    <span t-field="line.amount" t-options='{"widget": "monetary", "display_currency": o.journal_id.currency_id}'/>
                                                </td>
                                                <td class="text-right"></td>
                                            </tr>
                                            <!-- Totale -->
                                            <tr>
                                                <td colspan="3" class="text-right"><strong>TOTALE ERARIO</strong></td>
                                                <td class="text-right">
                                                    <strong t-esc="sum(l.amount for l in o.withholding_move_ids)" t-options='{"widget": "monetary", "display_currency": o.journal_id.currency_id}'/>
                                                </td>
                                                <td></td>
                                            </tr>
                                        </tbody>
                                    </table>
                                </div>
                            </div>

                            <!-- TOTALE GENERALE -->
                            <div class="row">
                                <div class="col-8 text-right">
                                    <strong>SALDO FINALE</strong>
                                </div>
                                <div class="col-4 text-right" style="border: 2px solid black; padding: 5px;">
                                    <strong t-esc="sum(l.amount for l in o.withholding_move_ids)" t-options='{"widget": "monetary", "display_currency": o.journal_id.currency_id}'/>
                                </div>
                            </div>
                            
                            <div class="row mt-4">
                                <div class="col-12 text-center text-muted">
                                    <small>Stampa non valida ai fini fiscali. Utilizzare per controllo e data entry.</small>
                                </div>
                            </div>

                        </div>
                    </t>
                </t>
            </t>
        </template>
    </data>
</odoo>
