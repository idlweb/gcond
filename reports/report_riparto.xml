<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- Custom Paper Format -->
        <record id="paperformat_gcond_landscape" model="report.paperformat">
            <field name="name">Landscape A4 (GCOND)</field>
            <field name="default" eval="True"/>
            <field name="format">A4</field>
            <field name="orientation">Landscape</field>
            <field name="margin_top">10</field>
            <field name="margin_bottom">10</field>
            <field name="margin_left">7</field>
            <field name="margin_right">7</field>
            <field name="header_line" eval="False"/>
            <field name="header_spacing">10</field>
            <field name="dpi">90</field>
        </record>

        <!-- Report Action -->
        <record id="action_report_riparto" model="ir.actions.report">
            <field name="name">Prospetto di Riparto</field>
            <field name="model">gcond.bilancio</field>
            <field name="report_type">qweb-pdf</field>
            <field name="report_name">gcond.report_riparto_document</field>
            <field name="report_file">gcond.report_riparto_document</field>
            <field name="print_report_name">'Riparto - %s' % (object.name)</field>
            <field name="binding_model_id" ref="model_gcond_bilancio"/>
            <field name="binding_type">report</field>
            <field name="paperformat_id" ref="paperformat_gcond_landscape"/>
        </record>

        <!-- Report Template -->
        <template id="report_riparto_document">
            <t t-call="web.html_container">
                <t t-foreach="docs" t-as="o">
                    <t t-call="web.external_layout">
                        <div class="page">
                            <!-- Prepare Matrix Data -->
                            <t t-set="matrix" t-value="o.get_riparto_matrix()"/>
                            
                            <h2 class="text-center">Prospetto di Riparto Spese</h2>
                            <h4 class="text-center text-muted"><span t-field="o.name"/></h4>

                            <div class="row mt-4 mb-4">
                                <div class="col-6">
                                    <strong>Condominio:</strong> <span t-field="o.condominio_id.name"/><br/>
                                    <strong>Periodo:</strong> <span t-field="o.date_start"/> - <span t-field="o.date_end"/>
                                </div>
                            </div>

                            <table class="table table-sm table-bordered" style="font-size: 11px;">
                                <thead style="background-color: #f2f2f2;">
                                    <tr>
                                        <th style="vertical-align: middle;">Condomino</th>
                                        <!-- Columns Header from Expense Types -->
                                        <t t-foreach="matrix['columns']" t-as="col">
                                            <th class="text-center" colspan="2" style="border-bottom: 2px solid #dee2e6;">
                                                <span t-esc="col.name"/>
                                            </th>
                                        </t>
                                        <th class="text-right table-active" style="vertical-align: middle;">Totale<br/>Quote</th>
                                        <th class="text-right" style="vertical-align: middle;">Riporto<br/>Eser. Prec.</th>
                                        <th class="text-right" style="vertical-align: middle;">Versato</th>
                                        <th class="text-right font-weight-bold table-dark" style="vertical-align: middle;">CONGUAGLIO</th>
                                    </tr>
                                    <tr>
                                        <th></th>
                                        <t t-foreach="matrix['columns']" t-as="col">
                                            <th class="text-right text-muted" style="font-size: 10px;">Mill.</th>
                                            <th class="text-right text-muted" style="font-size: 10px;">Quota</th>
                                        </t>
                                        <th colspan="4"></th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <tr t-foreach="matrix['rows']" t-as="row">
                                        <td class="font-weight-bold">
                                            <span t-esc="row['partner'].name"/>
                                        </td>
                                        <!-- Columns Values -->
                                        <t t-foreach="matrix['columns']" t-as="col">
                                            <t t-set="val_tuple" t-value="row['values'].get(col.id, (0.0, 0.0))"/>
                                            <td class="text-right text-muted">
                                                <span t-if="val_tuple[0] != 0" t-esc="'%.2f' % val_tuple[0]"/>
                                            </td>
                                            <td class="text-right">
                                                <span t-if="val_tuple[1] != 0" t-esc="val_tuple[1]" t-options='{"widget": "monetary", "display_currency": o.currency_id}'/>
                                                <span t-else="" class="text-muted">-</span>
                                            </td>
                                        </t>
                                        <!-- Row Totals -->
                                        <td class="text-right table-active font-weight-bold">
                                            <span t-esc="row['total_quota']" t-options='{"widget": "monetary", "display_currency": o.currency_id}'/>
                                        </td>
                                        <td class="text-right">
                                            <span t-esc="row['previous']" t-options='{"widget": "monetary", "display_currency": o.currency_id}'/>
                                        </td>
                                        <td class="text-right text-primary">
                                            <span t-esc="row['payments']" t-options='{"widget": "monetary", "display_currency": o.currency_id}'/>
                                        </td>
                                        <td class="text-right font-weight-bold table-dark">
                                            <span t-esc="row['balance']" t-options='{"widget": "monetary", "display_currency": o.currency_id}'/>
                                        </td>
                                    </tr>
                                </tbody>
                                <tfoot>
                                    <tr class="font-weight-bold" style="background-color: #e9ecef;">
                                        <td>TOTALE GENERALE</td>
                                        <t t-foreach="matrix['columns']" t-as="col">
                                            <td></td>
                                            <td class="text-right">
                                                <span t-esc="matrix['totals_col'].get(col.id, 0.0)" t-options='{"widget": "monetary", "display_currency": o.currency_id}'/>
                                            </td>
                                        </t>
                                        <td class="text-right">
                                            <span t-esc="matrix['grand_total_quota']" t-options='{"widget": "monetary", "display_currency": o.currency_id}'/>
                                        </td>
                                        <td class="text-right">
                                            <span t-esc="matrix['grand_total_previous']" t-options='{"widget": "monetary", "display_currency": o.currency_id}'/>
                                        </td>
                                        <td class="text-right">
                                            <span t-esc="matrix['grand_total_payments']" t-options='{"widget": "monetary", "display_currency": o.currency_id}'/>
                                        </td>
                                        <td class="text-right">
                                            <span t-esc="matrix['grand_total_balance']" t-options='{"widget": "monetary", "display_currency": o.currency_id}'/>
                                        </td>
                                    </tr>
                                </tfoot>
                            </table>
                            
                            <div class="mt-4">
                                <p class="small text-muted">
                                    * Importi calcolati in base alle tabelle millesimali vigenti.
                                </p>
                            </div>
                        </div>
                    </t>
                </t>
            </t>
        </template>
    </data>
</odoo>
