<odoo>
    <record id="view_account_condominium_table_tree" model="ir.ui.view">
        <field name="name">Condominium Tables</field>
        <field name="model">gcond.account.condominium.table</field>
        <field name="arch" type="xml">
            <tree string="Condominium Tables">
                <field name="name"/>
                <field name="code"/>
                <field name="description"/>
                <!--field name="condominium_id"/-->
                <field name="code_table"/>
                <field name="unit_of_measure"/>
                <field name="value_distribution"/>
            </tree>
        </field>
    </record>

    <record id="view_account_condominium_table_form" model="ir.ui.view">
        <field name="name">Condominium Table</field>
        <field name="model">account.condominium.table</field>
        <field name="arch" type="xml">
            <form string="Condominium Table">
                <field name="name"/>
                <field name="code"/>
                <field name="description"/>
                <!--field name="condominium_id"/-->
                <field name="code_table"/>
                <field name="unit_of_measure"/>
                <field name="value_distribution"/>

                <button name="new" string="New" type="primary"/>
                <button name="edit" string="Edit" type="primary"/>
                <button name="delete" string="Delete" type="primary"/>
            </form>
        </field>
    </record>
</odoo>
