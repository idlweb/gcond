<odoo>

        <record id="view_account_condominium_table_master_tree" model="ir.ui.view">
            <field name="name">account_condominium_table.list</field>
            <field name="model">account.condominio.table.master</field>
            <field name="arch" type="xml">
                <list string="">
                     <field name="name" optional="show"/>                       
                     <field name="description" optional="hide"/>
                     <field name="code_table" optional="show"/>
                     <field name="condominio_id" optional="show"/> 
                     <field name="expense_type_id" optional="show"/>
                </list>
            </field>
        </record>

        <!-- model.name form view -->
        <record id="view_account_condominium_table_master_form" model="ir.ui.view">
            <field name="name">account_condominium_table.form</field>
            <field name="model">account.condominio.table.master</field>
            <field name="arch" type="xml">
                <form string="">
                    <sheet>
                        <group>
                            <field name="name" required="True"/>                            
                            <field name="description" required="True"/>
                            <field name="code_table" required="True"/>                            
                            <field name="condominio_id" required="True"/>
                            <field name="expense_type_id" required="True" options="{'no_create': True}"/>
                            <field name="percentuale" required="True"/>
                            <!-- account_ids removed -->
                            <field name="table_ids" widget="one2many" relation="account.condominio.table" target="new">
                                <list string="Dettaglio tabella di ripartizione" editable="bottom">
                                    <field name="condomino_id" widget="res_partner_many2one" />
                                    <field name="unit_of_measure" />
                                    <field name="value_distribution" sum="Total" />
                                    <field name="quote" />                                                                
                                </list>
                            </field>                            
                        </group>
                    </sheet>
                </form>
            </field>
        </record>   

         <record id="view_account_condominium_table_master_m2m" model="ir.ui.view">
            <field name="name">account_condominium_table.m2m</field>
            <field name="model">account.condominio.table.master</field>
            <field name="arch" type="xml">
                <m2m_group m2m_field="table_ids" color_field="color">                      
                </m2m_group>
            </field>
        </record>   

</odoo>
