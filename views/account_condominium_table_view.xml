<odoo>
        <record id="view_account_condominium_table_tree" model="ir.ui.view">
            <field name="name">Dettagglio tabelle di ripartizione</field>
            <field name="model">account.condominio.table</field>
            <field name="arch" type="xml">
                <tree string="Condominium Tables">
                    <field name="unit_of_measure"/>
                    <field name="value_distribution"/>
                </tree>
            </field>
        </record>

        <record id="view_account_condominium_table_form" model="ir.ui.view">
            <field name="name">Dettagglio tabelle di ripartizione</field>
            <field name="model">account.condominio.table</field>
            <field name="arch" type="xml">
                <form string="Condominium Table">
                    <field name="table_id"/>
                    <field name="unit_of_measure"/>
                    <field name="value_distribution"/>

                    <button name="new" string="New" type="primary"/>
                    <button name="edit" string="Edit" type="primary"/>
                    <button name="delete" string="Delete" type="primary"/>
                </form>
            </field>
        </record>


        <record id="view_account_condominium_table_master_tree" model="ir.ui.view">
            <field name="name">account_condominium_table.tree</field>
            <field name="model">account.condominio.table.master</field>
            <field name="arch" type="xml">
                <tree string="">
                     <field name="name" required="True"/>                       
                     <field name="description" required="True"/>
                     <field name="code_table" required="True"/>
                     <field name="condominio_id" required="True"/> 
                </tree>
            </field>
        </record>

        <!-- model.name form view -->
        <record id="view_account_condominium_table_master_form" model="ir.ui.view">
            <field name="name">account_condominium_table.form</field>
            <field name="model">account.condominio.table.master</field>
            <field name="arch" type="xml">
                <form string="">
                    <sheet>
                        <group>
                            <field name="name" required="True"/>                            
                            <field name="description" required="True"/>
                            <field name="code_table" required="True"/>
                            <field name="account_id" required="True"/> 
                            <field name="condominio_id" required="True"/>                  
                            <field name="table_ids" widget="field.tree" relation="account.condominio.table" target="new">
                                <tree string="Dettaglio tabella di ripartizione">
                                    <field name="table_id"/>
                                    <field name="unit_of_measure" label="udm"/>
                                    <field name="value_distribution" label="valore"/>
                                    <field name="quote" label="%"/>                                                                
                                </tree>
                            </field>                            
                        </group>
                    </sheet>
                </form>
            </field>
        </record>   

</odoo>
