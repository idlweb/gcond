<odoo>
    <record id="view_account_sensore_kanban" model="ir.ui.view">
        <field name="name">account.sensor.kanban</field>
        <field name="model">account.sensore</field>
        <field name="arch" type="xml">
            <kanban>
                <field name="nome" />
                <field name="valore_intero_interr" />
                <field name="valore_decimale_libero"/>
                <field name="max_rate"/>
                <button  name="read_value" type="object" class="btn-primary" icon="fa-eye" />
                <templates>
                        <t t-name="kanban-box">
                            <div t-attf-class="oe_kanban_global_click">
                                <field name="valore_decimale_libero" widget="progressbar"/>    
                                <field name="max_rate"/>
                                <field name="valore_decimale_libero" widget="gauge" 
                                       style="width:80px;height:50px;cursor:pointer;" 
                                       options="{'max_field': 'max_rate'}">         
                                </field> 
                                <strong class="o_kanban_record_title"><field name="nome" /></strong>           
                            </div>
                        </t>
                </templates>
            </kanban>
        </field>
    </record>
</odoo>