<odoo>
    <record id="view_account_sensore_kanban" model="ir.ui.view">
        <field name="name">account.sensor.kanban</field>
        <field name="model">account.sensore</field>
        <field name="arch" type="xml">
            <kanban>
                <field name="nome" />
                <field name="valore_intero_interr" />
                <field name="valore_decimale_libero"/>
                <field name="max_rate"/>
                <field name="valore_bool"/>
                <button  name="read_value" type="object" class="btn-primary" icon="fa-eye" />
                <templates>
                        <t t-name="kanban-box">
                            <div t-attf-class="oe_kanban_global_click">
                                <h1><field name="nome"/></h1>                                  
                                <field name="valore_bool"  widget="boolean_toggle"/>
                                <field name="valore_intero_interr"  widget="progressbar"/> 
                                <div class="col-12 col-sm-4 mb-3 mb-sm-0 o_kanban_primary_left">
                                    <button type="object" name="write_value_off" class="btn btn-secondary" >
                                        <span>spegni</span>
                                    </button>
                                    <button type="object" name="write_value_on" class="btn btn-secondary" >
                                        <span>accendi</span>
                                    </button>
                                </div>
                                <div class="oe_gauge o_field_widget" name="valore_decimale_libero" style="position: relative;">
                                    <div class="chartjs-size-monitor">
                                            <div class="chartjs-size-monitor-expand">
                                                    <div class="">
                                            </div>
                                    </div>
                                    <div class="chartjs-size-monitor-shrink">
                                        <div class=""></div>
                                    </div>
                                </div>
                                <canvas height="300" class="chartjs-render-monitor" width="150" style="display: block; width: 150px; height: 300px;"></canvas>
                                <span class="o_gauge_value" style="text-align: center; position: absolute; left: 0px; right: 0px; bottom: 100px; font-weight: bold;">
                                    <field name="valore_decimale_libero"/>
                                </span>
                                </div>
                                <!--field name="valore_decimale_libero" widget="gauge" style="height: 150px!important; width: 300px!important;"/-->                                                      
                            </div>
                        </t>
                </templates>
            </kanban>
        </field>
    </record>
</odoo>