<odoo>
    <record id="model_name_view_search" model="ir.ui.view">
                <field name="name">account.sensore.view.search</field>
                <field name="model">account.sensore</field>
                <field name="arch" type="xml">
                    <search string="">
                            <field name="categoria_sensore"/>
                            <field name="nome"/>
                            <field name="Descrizione"/>  
                            <field name="progetto"/> 
                            <field name="partner"/>  
                    </search>
                </field>
    </record>
    <record id="view_account_sensore_kanban" model="ir.ui.view">
        <field name="name">account.sensor.kanban</field>
        <field name="model">account.sensore</field>
        <field name="arch" type="xml">
            <kanban>
                <field name="nome" />
                <field name="valore_intero_interr" />
                <field name="valore_decimale_libero"/>
                <field name="max_rate"/>
                <field name="valore_bool"/>
                <field name="categoria_sensore"/>
                <field name="progetto"/>
                <field name="partner"/>                                                     
                <button  name="read_value" type="object" class="btn-primary" icon="fa-eye" />
                <templates>
                        <t t-name="kanban-box">
                            <div t-attf-class="oe_kanban_global_click">
                                <h1><field name="nome"/></h1>                                  
                                <field name="valore_bool"  widget="boolean_toggle"/>
                                <field name="valore_intero_interr"  widget="progressbar"/> 
                                <div class="col-12 col-sm-4 mb-3 mb-sm-0 o_kanban_primary_left">
                                    <button type="object" name="write_value_off" class="btn btn-secondary" >
                                        <span>spegni</span>
                                    </button>
                                    <button type="object" name="write_value_on" class="btn btn-secondary" >
                                        <span>accendi</span>
                                    </button>
                                </div>            
                                <field name="valore_decimale_libero" widget="gauge" style="width:150px;height:300px;cursor:pointer;"
                                options="{'max_field': 'max_rate'}" />                                                      
                            </div>
                        </t>
                </templates>
            </kanban>
        </field>
    </record>
</odoo>