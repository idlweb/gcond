<odoo>
    <record id="account_move_form_extended" model="ir.ui.view">
        <field name="name">account.move.form.extended</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_move_form"/>
        <field name="arch" type="xml">
            <xpath expr="//header" position="inside">
                <button name="button_distribute_charges" string="Distribute Charges" type="object" class="btn-primary"/>
            </xpath>
            <xpath expr="//field[@name='invoice_line_ids']/list/field[@name='name']" position="after">
                <field name="water_distribution_id" optional="show"/>
                <field name="distribution_table_id" optional="hide"/>
            </xpath>
            <xpath expr="//field[@name='line_ids']/list/field[@name='name']" position="after">
                <field name="water_distribution_id" optional="show"/>
                <field name="distribution_table_id" optional="hide"/>
            </xpath>
        </field>
    </record>
</odoo>