<odoo>

    <record id="view_condominoo_tree" model="ir.ui.view">
        <field name="name">Condomino tree</field>
        <field name="model">res.partner</field>
        <field name="inherit_id" ref="base.view_partner_tree" />
        <field name="arch" type="xml">
            <field name="email" position="before">
                <field name="is_condominio" optional="show"/>
                <field name="condominio_id" optional="show"/>
            </field>
            <field name="email" position="after">
                <field name="phone" position="move"/>
            </field>
        </field>
    </record>

    <record id="view_condomino_filter" model="ir.ui.view">
        <field name="model">res.partner</field>
        <field name="inherit_id" ref="base.view_res_partner_filter" />
        <field name="arch" type="xml">
            <xpath expr="//filter[@name='inactive']" position="before">
                <filter string="Edifici (Condomini)" name="buildings" domain="[('is_condominio','=', True)]"/>
                <filter string="Residenti (Condomini)" name="residents" domain="[('condominio_id','!=', False)]"/>
                <separator/>
            </xpath>
            <xpath expr="//group" position="inside">
                <filter string="È un Condominio" name="group_by_is_condominio" context="{'group_by': 'is_condominio'}"/>
                <filter string="Per Edificio" name="group_by_condominio_id" context="{'group_by': 'condominio_id'}"/>
            </xpath>
        </field>
    </record>

    <record id="view_condomino_form" model="ir.ui.view">
        <field name="name">Condomino form</field>
        <field name="model">res.partner</field>
        <field name="inherit_id" ref="base.view_partner_form" />
        <field name="arch" type="xml">
            <xpath expr="//div[@class='oe_button_box']/button[last()]" position="after">
                <button type="object" class="oe_stat_button" icon="fa-pencil-square-o" name="action_view_account_situation">
                    <div class="o_form_field o_stat_info">
                        <span class="o_stat_value">
                            <field name="currency_id" invisible="1"/>
                            <field name="total_invoiced" widget="monetary" options="{'currency_field': 'currency_id'}"/>
                        </span>
                        <span class="o_stat_text">Situazione Contabile</span>
                    </div>
                </button>
            </xpath>

            <!-- Aggiungiamo is_condominio solo se è una società (Azienda) -->
            <xpath expr="//field[@name='is_company']" position="after">
                <field name="is_condominio" invisible="not is_company" string="È un Condominio (Edificio)?"/>
            </xpath>

            <!-- Campi relativi al ruolo di condomino -->
            <field name="street" position="before">
                <group string="Dati Condominiali" name="gcond_data">
                    <field name="condominio_id" string="Appartiene al Condominio" />
                    <field name="type_condomino" invisible="not condominio_id"/>
                </group>
            </field>
        </field>
    </record>

</odoo>