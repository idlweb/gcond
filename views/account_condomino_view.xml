<odoo>

    <record id="view_condominoo_tree" model="ir.ui.view">
        <field name="name">Condomino tree</field>
        <field name="model">res.partner</field>
        <field name="inherit_id" ref="base.view_partner_tree" />
        <field name="arch" type="xml">
            <field name="email" position="before">
                <field name="is_condominio" string="Edificio" optional="hide"/>
                <field name="condominio_id" string="Condominio" widget="badge" decoration-info="1"/>
            </field>
        </field>
    </record>

    <!-- Dedicated tree view for residents to ensure clean name display -->
    <record id="view_gcond_resident_tree" model="ir.ui.view">
        <field name="name">res.partner.resident.tree</field>
        <field name="model">res.partner</field>
        <field name="arch" type="xml">
            <list string="Residenti">
                <field name="name" string="Nome"/>
                <field name="condominio_id" string="Condominio" widget="badge" decoration-info="1"/>
                <field name="phone" class="o_force_ltr" optional="show"/>
                <field name="email" optional="show"/>
                <field name="is_condominio" invisible="1"/>
            </list>
        </field>
    </record>

    <record id="view_condomino_filter" model="ir.ui.view">
        <field name="model">res.partner</field>
        <field name="inherit_id" ref="base.view_res_partner_filter" />
        <field name="arch" type="xml">
            <xpath expr="//filter[@name='inactive']" position="before">
                <filter string="Edifici (Palazzi)" name="buildings" domain="[('is_condominio','=', True)]"/>
                <filter string="Residenti (Condomini)" name="residents" domain="[('condominio_id','!=', False)]"/>
                <separator/>
            </xpath>
            <xpath expr="//group" position="inside">
                <filter string="Per Edificio" name="group_by_condominio_id" context="{'group_by': 'condominio_id'}"/>
            </xpath>
        </field>
    </record>

    <record id="view_condomino_form" model="ir.ui.view">
        <field name="name">Condomino form</field>
        <field name="model">res.partner</field>
        <field name="inherit_id" ref="base.view_partner_form" />
        <field name="arch" type="xml">
            <xpath expr="//div[@class='oe_button_box']/button[last()]" position="after">
                <button type="object" class="oe_stat_button" icon="fa-list-alt" name="action_view_account_situation">
                    <div class="o_form_field o_stat_info">
                        <span class="o_stat_text">Estratto Conto</span>
                    </div>
                </button>
                <button type="object" class="oe_stat_button" icon="fa-clock-o" name="action_view_aging_situation">
                    <div class="o_form_field o_stat_info">
                        <span class="o_stat_text">Scadenziario</span>
                    </div>
                </button>
            </xpath>

            <field name="street" position="before">
                <group string="Dati Condominiali" name="condo_data_group">
                    <field name="is_condominio" string="Ãˆ un Edificio (Fabbricato/Condominio)"/>
                    <field name="condominio_id" string="Abita nel Palazzo" invisible="is_condominio"/>
                    <field name="type_condomino" invisible="not condominio_id or is_condominio"/>
                    <field name="property_payment_term_id" string="Termini Pagamento (Riscossione)" invisible="is_condominio" options="{'no_open': True, 'no_create': True}"/>
                </group>
            </field>
        </field>
    </record>

</odoo>