<odoo>

    <record id="view_condominoo_tree" model="ir.ui.view">
        <field name="name">Condomino tree</field>
        <field name="model">res.partner</field>
        <field name="inherit_id" ref="base.view_partner_tree" />
        <field name="arch" type="xml">
            <field name="email" position="before">
                <field name="is_condominio" string="Edificio" optional="show"/>
                <field name="condominio_id" string="Appartiene a" optional="show"/>
            </field>
            <field name="email" position="after">
                <field name="phone" position="move"/>
            </field>
        </field>
    </record>

    <record id="view_condomino_filter" model="ir.ui.view">
        <field name="model">res.partner</field>
        <field name="inherit_id" ref="base.view_res_partner_filter" />
        <field name="arch" type="xml">
            <xpath expr="//filter[@name='inactive']" position="before">
                <filter string="Edifici (Palazzi)" name="buildings" domain="[('is_condominio','=', True)]"/>
                <filter string="Residenti (Condomini)" name="residents" domain="[('is_resident','=', True)]"/>
                <separator/>
            </xpath>
            <xpath expr="//group" position="inside">
                <filter string="Per Edificio" name="group_by_condominio_id" context="{'group_by': 'condominio_id'}"/>
            </xpath>
        </field>
    </record>

    <record id="view_condomino_form" model="ir.ui.view">
        <field name="name">Condomino form</field>
        <field name="model">res.partner</field>
        <field name="inherit_id" ref="base.view_partner_form" />
        <field name="arch" type="xml">
            <xpath expr="//div[@class='oe_button_box']/button[last()]" position="after">
                <button type="object" class="oe_stat_button" icon="fa-pencil-square-o" name="action_view_account_situation">
                    <div class="o_form_field o_stat_info">
                        <span class="o_stat_value">
                            <field name="currency_id" invisible="1"/>
                            <field name="total_invoiced" widget="monetary" options="{'currency_field': 'currency_id'}"/>
                        </span>
                        <span class="o_stat_text">Situazione Contabile</span>
                    </div>
                </button>
            </xpath>

            <!-- Checkbox per definire se è un edificio -->
            <xpath expr="//field[@name='is_company']" position="after">
                <div class="d-flex align-items-center">
                    <field name="is_condominio" class="oe_inline"/>
                    <label for="is_condominio" string="È un Edificio (Fabbricato/Condominio)"/>
                </div>
            </xpath>

            <!-- Collegamento al condominio (Residenti) -->
            <field name="street" position="before">
                <group string="Associazione Condominiale (Residente)" name="gcond_resident_data">
                    <field name="condominio_id" string="Abita nel Palazzo" />
                    <field name="is_resident" invisible="1"/>
                    <field name="type_condomino" invisible="not condominio_id"/>
                </group>
            </field>
        </field>
    </record>

</odoo>