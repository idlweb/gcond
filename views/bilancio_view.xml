<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Tree View -->
    <record id="view_gcond_bilancio_tree" model="ir.ui.view">
        <field name="name">gcond.bilancio.tree</field>
        <field name="model">gcond.bilancio</field>
        <field name="arch" type="xml">
            <list string="Bilanci">
                <field name="name"/>
                <field name="condominio_id"/>
                <field name="date_start"/>
                <field name="date_end"/>
                <field name="state" widget="badge" decoration-info="state == 'draft'" decoration-success="state == 'approved'"/>
            </list>
        </field>
    </record>

    <!-- Form View -->
    <record id="view_gcond_bilancio_form" model="ir.ui.view">
        <field name="name">gcond.bilancio.form</field>
        <field name="model">gcond.bilancio</field>
        <field name="arch" type="xml">
            <form string="Bilancio">
                <header>
                    <button name="action_compute_lines" string="Calcola Spese" type="object" class="btn-primary" invisible="state != 'draft'"/>
                    <button name="action_approve" string="Approva" type="object" class="btn-danger" invisible="state != 'draft'" confirm="Sei sicuro? Il bilancio sarÃ  bloccato."/>
                    <button name="action_reset_draft" string="Riporta in Bozza" type="object" invisible="state == 'draft'"/>
                    <field name="state" widget="statusbar"/>
                </header>
                <sheet>
                    <div class="oe_title">
                        <h1>
                            <field name="name" placeholder="Descrizione (es. Consuntivo 2025)"/>
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="condominio_id" readonly="state != 'draft'"/>
                            <field name="currency_id" invisible="1"/>
                        </group>
                        <group>
                            <field name="date_start" readonly="state != 'draft'"/>
                            <field name="date_end" readonly="state != 'draft'"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Dettaglio Spese (Consuntivo)">
                            <field name="line_ids" readonly="state != 'draft'">
                                <list string="Righe Bilancio" editable="bottom" create="false" delete="false">
                                    <field name="expense_type_id"/>
                                    <field name="amount_actual" sum="Totale Consuntivo"/>
                                    <field name="amount_budget" sum="Totale Preventivo"/>
                                    <field name="difference" sum="Totale Differenza" decoration-danger="difference &lt; 0" decoration-success="difference &gt; 0"/>
                                    <field name="currency_id" column_invisible="True"/>
                                </list>
                            </field>
                        </page>
                    </notebook>
                </sheet>
                <chatter/>
            </form>
        </field>
    </record>

    <!-- Action -->
    <record id="action_gcond_bilancio" model="ir.actions.act_window">
        <field name="name">Bilanci Condominiali</field>
        <field name="res_model">gcond.bilancio</field>
        <field name="view_mode">list,form</field>
        <field name="help" type="html">
          <p class="o_view_nocontent_smiling_face">
            Crea il primo Bilancio Consuntivo/Preventivo
          </p>
        </field>
    </record>

    <!-- Menu -->
    <menuitem id="menu_gcond_bilancio"
              name="Bilanci &amp; Adempimenti"
              parent="gcond.menu_root"
              sequence="20"/>
              
    <menuitem id="menu_gcond_bilancio_list"
              name="Gestione Bilanci"
              parent="menu_gcond_bilancio"
              action="action_gcond_bilancio"
              sequence="10"/>
</odoo>
