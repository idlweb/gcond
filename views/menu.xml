<odoo>
    <record model="ir.actions.act_window" id="gcond.action_window">
      <field name="name">gcond window</field>
      <field name="res_model">account.condominio</field>
      <field name="view_mode">form</field>
    </record>

    <record model="ir.actions.act_window" id="gcond.condominium_accounting">
      <field name="name">Account Condominium Accounting</field>
        <field name="model">account.condominio</field>
        <field name="arch" type="xml">
            <form string="Account Condominium Accounting">
                <field name="name"/>
                <field name="vat"/>
                <field name="type_registration"/>
                <field name="receivable_account_id"/> 
                <field name="payable_account_id"/>
                <field name="journal_id"/>
            </form>
        </field>
    </record>


    <!-- Top menu item -->

    <menuitem name="gcond_condominio" id="gcond.menu_root"/>

    <!-- menu categories -->

    <menuitem name="Menu 1" id="gcond.menu_1" parent="gcond.menu_root"/>
    <menuitem name="Menu 2" id="gcond.menu_2" parent="gcond.menu_root"/>

    <!-- actions -->

    <menuitem name="List" id="gcond.menu_1_list" parent="gcond.menu_1"
            action="gcond.action_window"/>
 
</odoo>

