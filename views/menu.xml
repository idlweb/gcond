<odoo>

    <record id="action_register_condominium" model="ir.actions.act_window">
        <id>action_register_condominium</id>
        <name>Registra condominio</name>
        <model>account.condominio</model>
        <view_mode>form</view_mode>
        <target>new</target>
    </record>


    <record model="ir.actions.act_window" id="gcond.action_window">
      <field name="name">gcond window</field>
      <field name="res_model">account.condominio</field>
      <field name="view_mode">tree,form</field>
    </record>

    <!-- Top menu item -->

    <menuitem name="gcond_condominio" id="gcond.menu_root"/>

    <!-- menu categories -->

    <menuitem name="Menu 1" id="gcond.menu_1" parent="gcond.menu_root"/>
    <menuitem name="Menu 2" id="gcond.menu_2" parent="gcond.menu_root"/>

    <!-- actions -->

    <menuitem name="List" id="gcond.menu_1_list" parent="gcond.menu_1"
            action="gcond.action_window"/>
    
    <menuitem id="menu_gcond_register_condominium" parent="gcond.menu_1" 
            name="Registra condominio" action="action_register_condominium"/>
    
    <record id="account_condominio" model="ir.model">
            <field name="action_register_condominium" ref="action_register_condominium"/>
    </record>

</odoo>

