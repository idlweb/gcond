<odoo>
    <record model="ir.actions.act_window" id="gcond.action_window">
      <field name="name">Gestione condominiale</field>
      <field name="res_model">account.condominio</field>
      <field name="view_mode">tree,form</field>
    </record>

    
    <record model="ir.actions.act_window" id="gcond.account_condomino_action">
        <field name="name">tutti i condomini</field>
        <field name="res_model">account.condomino</field>
        <field name="view_mode">tree,form</field>
    </record>

    <!-- Top menu item -->

    <menuitem name="GESTIONE CONDOMINIALE" id="gcond.menu_root"/>

    <!-- menu categories -->

    <menuitem name="Condominio" id="gcond.menu_1" parent="gcond.menu_root"/>
    <menuitem name="Condomino" id="gcond.menu_2" parent="gcond.menu_root"/>

    <!-- actions -->

    <menuitem name="Gestione" id="gcond.menu_1_list" parent="gcond.menu_1" action="gcond.action_window"/>
    <menuitem name="Gestione condomini" id="gcond.menu_2_list" parent="gcond.menu_2" action="gcond.action_window" sequence="10" groups=""/>

</odoo>

