<odoo>
    <record id="view_account_condominium_table_tree" model="ir.ui.view">
        <field name="name">Condominium Tables</field>
        <field name="model">account.condominio</field>
        <field name="arch" type="xml">
            <tree string="Condominium Tables">
                <field name="name"/>
                <field name="code"/>
                <field name="description"/>
            </tree>
        </field>
    </record>
    
    <record id="view_account_condominio_form" model="ir.ui.view">
        <field name="name">Account Condominium Form</field>
        <field name="model">account.condominio</field>
        <field name="arch" type="xml">
            <form string="Account Condominium">
                <field name="name">name</field> 
                <field name="code">code</field> 
                <field name="description">description</field> 
                <field name="vat">vat</field> 
                <field name="address">address</field> 
                <field name="city">city</field> 
                <field name="zip">zip</field> 
                <field name="country_id">country_id</field> 
                <field name="phone">phone</field> 
                <field name="email">email</field> 
                <field name="receivable_account_id">receivable_account_id</field> 
                <field name="journal_id">journal_id</field>            
            </form>
        </field>
    </record>
</odoo>
