<odoo>
    <record id="view_account_condominium" model="ir.ui.view">
        <field name="name">Condominium Account</field>
        <field name="model">account.condominio</field>
        <field name="arch" type="xml">
            <form string="Condominium Account">
                <field name="name"/>
                <field name="code"/>
                <field name="description"/>
                <field name="property_account_register_id"/>

                <button name="new" string="New" type="primary"/>
                <button name="edit" string="Edit" type="primary"/>
                <button name="delete" string="Delete" type="primary"/>
            </form>
        </field>
    </record>

    <record id="view_account_condominium_accounting" model="ir.ui.view">
        <field name="name">Account Condominium Accounting</field>
        <field name="model">account.condominio</field>
        <field name="arch" type="xml">
            <form string="Account Condominium Accounting">
                <field name="name"/>
                <field name="vat"/>
                <field name="type_registration"/>
                <field name="receivable_account_id"/> 
                <field name="payable_account_id"/>
                <field name="journal_id"/>
                <field name="date_start"/>
                <field name="date_end"/>
                <field name="invoice_ids"/>
            </form>
        </field>
    </record>


    <record id="view_account_condominio_form" model="ir.ui.view">
        <field name="name">Account Condominium Form</field>
        <field name="model">account.condominio</field>
        <field name="arch" type="xml">
            <form string="Account Condominium">
                <field name="name"/>
                <field name="vat"/>
                <field name="address"/>
                <field name="city"/>
                <field name="zip"/>
                <field name="country_id"/>
                <field name="phone"/>
                <field name="email"/>
                <div class="o_form_buttons">
                    <button name="action_accounting" string="ContabilitÃ " type="object" />
                </div>
            </form>
        </field>
    </record>
</odoo>